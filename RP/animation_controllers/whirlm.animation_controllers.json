{
	"format_version": "1.19.0",
	"animation_controllers": {
		"controller.animation.whirlm.controller": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"animations": [
						"idle"
					],
					"transitions": [
						{
							"walking": "q.ground_speed > 1.0 && !q.is_avoiding_mobs"
						},
						{
							"sleep": "q.is_sleeping"
						},
						{
							"run": "q.ground_speed > 1.0 && q.is_avoiding_mobs"
						}
					],
					"blend_transition": 0.2
				},
				"walking": {
					"animations": [
						"walk"
					],
					"transitions": [
						{
							"idle": "q.ground_speed < 0.5"
						},
						{
							"sleep": "q.is_sleeping"
						},
						{
							"run": "q.is_avoiding_mobs"
						}
					],
					"blend_transition": 0.2
				},
				"sleep": {
					"animations": [
						"sleep"
					],
					"transitions": [
						{
							"idle": "!q.is_sleeping"
						}
					],
					"blend_transition": 0.2
				},
				"run": {
					"animations": [
						"run"
					],
					"transitions": [
						{
							"idle": "q.ground_speed < 0.5"
						},
						{
							"walking": "q.ground_speed > 1.0 && !q.is_avoiding_mobs"
						},
						{
							"sleep": "q.is_sleeping && !q.is_avoiding_mobs"
						}
					],
					"blend_transition": 0.2
				}
			}
		}
	}
}