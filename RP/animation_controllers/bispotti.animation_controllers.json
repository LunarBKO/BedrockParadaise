{
	"format_version": "1.19.0",
	"animation_controllers": {
		"controller.animation.bispotti.controller": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"animations": ["idle"],
					"transitions": [
						{"walking": "q.is_on_ground && q.ground_speed > 1.0"},
						{"fly": "!q.is_on_ground && q.modified_move_speed"},
						{"sleep": "q.is_on_ground && q.is_sleeping"},
						{"eating": "q.is_casting"}
					],
					"blend_transition": 0.2
				},
				"walking": {
					"animations": [
						{"walk": "!q.is_wall_climbing"},
						{"climb": "q.is_wall_climbing"}
					],
					"transitions": [
						{"idle": "q.is_on_ground && q.ground_speed < 0.5"},
						{"fly": "!q.is_on_ground && q.modified_move_speed && !q.is_wall_climbing"},
						{"sleep": "q.is_on_ground && q.is_sleeping"},
						{"eating": "q.is_casting"}
					],
					"blend_transition": 0.2
				},
				"fly": {
					"animations": ["fly"],
					"transitions": [
						{"idle": "q.is_on_ground && q.ground_speed < 0.5"},
						{"walking": "q.is_on_ground && q.ground_speed > 1.0"},
						{"sleep": "q.is_on_ground && q.is_sleeping"},
						{"eating": "q.is_casting"}
					],
					"blend_transition": 0.2,
					"blend_via_shortest_path": true
				},
				"sleep": {
					"animations": ["sleep"],
					"transitions": [
						{"idle": "!q.is_sleeping"}
					],
					"blend_transition": 0.2
				},
				"eating": {
					"animations": ["eating"],
					"transitions": [
						{"idle": "!q.is_casting && q.ground_speed < 0.5"},
						{"walking": "!q.is_casting && q.ground_speed > 1.0"},
						{"sleep": "!q.is_casting && q.is_sleeping"}
					],
					"blend_transition": 0.2
				}
			}
		}
	}
}